/* miniprogram/pages/index/month.wxss */

.container {
  padding: 0 24rpx;
}

.title {
  text-align: center;
  margin-top: 24rpx;
  margin-bottom: 24rpx;
  line-height: 40rpx;
  font-weight: bold;
}

.date-choose {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  border-bottom: 1px solid #eee;
}

.date-item {
  width: 20%;
  text-align: center;
  height: 60rpx;
  border: 1rpx solid #eee;
  background: #f5f5f5;
  line-height: 60rpx;
  border-radius: 8rpx;
  margin-bottom: 24rpx;
}

.date-item.active {
  background-color: #1c86ee;
  color: #fff;
}

.list-target {
  display: flex;
  flex-direction: column;
  line-height: 65rpx;
  font-size: 28rpx;
  margin: 2% 0;
}

.list-target-item {
  display: flex;
  margin: 0 30rpx;
  justify-content: space-between;
  align-content: center;
}

.list-target-item-check {
  display: block;
  float: left;
}

.list-target-item-span {
  flex: 1;
}

.list-target-item-operation {
  font-size: 14px;
  color: #f13232;
}

.goalInput {
  display: block;
  width: 100%;
  height: 60rpx;
  border: 1px solid #e7e7e7;
  border-radius: 10rpx;
  text-align: left;
  padding: 0 25rpx;
  box-sizing: border-box;
}
