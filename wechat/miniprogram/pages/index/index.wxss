.header-img {
  position: absolute;
  width: 100rpx;
  height: 45rpx;
  left: 30rpx;
  top: 40rpx;
  border-radius: 10%;
}

.site-img {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}

.user-name {
  position: absolute;
  left: 150rpx;
  font-weight: 600;
  font-size: 35rpx;
}

.list-target {
  display: flex;
  flex-direction: column;
  line-height: 65rpx;
  font-size: 28rpx;
  margin: 2% 0;
}

.list-target-item {
  display: flex;
  margin: 0 30rpx;
  justify-content: space-between;
  align-content: center;
}

.list-target-item-check {
  display: block;
  float: left;
}

.list-target-item-span {
  flex: 1;
}

.list-target-item-operation {
  font-size: 14px;
  color: #f13232;
}
.goalInput {
  display: block;
  width: 100%;
  height: 60rpx;
  border: 1px solid #e7e7e7;
  border-radius: 10rpx;
  text-align: left;
  padding: 0 25rpx;
  color: #333;
  box-sizing: border-box;
}
