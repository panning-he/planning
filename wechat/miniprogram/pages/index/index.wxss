.title {
  background-color: #1c86ee;
  height: 42rpx;
}

.title .text {
  float: right;
  margin: 0 35rpx;
  vertical-align: bottom;
  font-size: 12px;
  color: white;
}

.title .icon {
  padding: 0 30rpx 0;
  float: right;
  width: 42rpx;
  height: 42rpx;
}

